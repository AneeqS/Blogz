<% include ./partials/header %>

<div class="ui main text container segment inverted">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label class="ui violet label">Title</label>
            <input type="text" name="blog[title]" required>
        </div>
        <div class="field">
            <label class="ui purple label">Image</label>
            <input type="text" name="blog[image]">
        </div>
        <div class="field">
            <label class="ui violet label">Blog Content</label>
            <textarea name="blog[content]" required></textarea>
        </div>
        <div class="field">
            <button class="ui purple basic big button inverted" type="submit">Submit</button>
        </div>
    </form>
</div>

<% include ./partials/footer %>