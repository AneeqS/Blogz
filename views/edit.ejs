<% include ./partials/header %>

<div class="ui main text container segment inverted">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label class="ui violet label">Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required>
        </div>
        <div class="field">
            <label class="ui purple label">Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label class="ui violet label">Blog Content</label>
            <textarea name="blog[content]" required><%= blog.content%></textarea>
        </div>
        <div class="field">
            <button class="ui purple basic big button inverted" type="submit">Update</button>
        </div>
    </form>
</div>

<% include ./partials/footer %>